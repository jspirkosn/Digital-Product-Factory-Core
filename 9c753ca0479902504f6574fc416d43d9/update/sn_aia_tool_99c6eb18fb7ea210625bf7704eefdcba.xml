        <active>true</active>
        <description>Gets the URL of the parent request  given a RITM</description>
        <input_schema>[{"name":"requested_item_sys_id","description":"Requested Item Sys ID"}]</input_schema>
        <name>Get URL to parent request</name>
        <record_type>custom</record_type>
        <script><![CDATA[(function(inputs) {

gs.info('Requested item sys id is: ' + inputs.requested_item_sys_id);
var ri = new GlideRecord('sc_req_item');
ri.get(inputs.requested_item_sys_id);

gs.info('Request sys id is: ' + ri.request);

var output = 'https://' + gs.getProperty('instance_name') + '.service-now.com/esc?id=order_status&table=sc_request&sys_id=' + ri.request.sys_id;
return output;

})(inputs);]]></script>
